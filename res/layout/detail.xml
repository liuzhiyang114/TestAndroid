<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guidance_bg"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <!-- 返回 -->

    <RelativeLayout
         android:paddingTop="3dip"
         android:paddingBottom="3dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/orange" >

        <Button
           
            android:id="@+id/btnre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="25dip"
            android:paddingRight="10dip"
            android:textSize="18sp"
            android:background="@drawable/buttonbg"
            android:text="@string/exitlog" />

        <TextView
            android:id="@+id/Parname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="详细信息"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="25sp" />
    </RelativeLayout>
    <!-- 停车场名 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nameLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/namelog"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="万达停车场"
            android:textColor="#000000"
            android:textSize="23sp" />
    </LinearLayout>
    <!-- 剩余停车位 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/residueLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/relog"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/residue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="102"
            android:textStyle="bold" 
            android:textColor="#CC0000"
            android:textSize="23sp" />
    </LinearLayout>
    <!-- 总停车位 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/countLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/alllog"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textColor="#000000"
            android:textSize="23sp" />
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="停车场详细信息"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@drawable/orange"
            android:gravity="center_horizontal" />
    
    <TextView
        android:id="@+id/ParkDetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="500"
        android:enabled="false"
        android:gravity="top"
        android:text="停车场位于天桥旁,环境良好,有专人看护,收费标准如下：1小时及以内4元，1到4小时,每小时3元,4小时及以上每小时2.5元"
        android:textColor="#000000"
        android:textSize="18sp" />
       <!-- android:inputType="textMultiLine"
        android:minLines="15" --> 
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="停车场缩略图"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@drawable/orange"
            android:gravity="center_horizontal" />
    <ImageButton 
        android:id="@+id/btnpark"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/park"
        />
    

</LinearLayout>
</ScrollView>